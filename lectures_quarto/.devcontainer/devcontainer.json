{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "quarto.quarto"
            ]
        },
        "settings": {
            "python.pythonPath": "/opt/conda/bin/python"
        }
    },
    "runArgs": [
        "--net", "host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
    ]
}